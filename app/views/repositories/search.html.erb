<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<ul>
	<% if @repositories %>
		<% @repositories.each do |repository| %>

			<li><%=repository['name']%> - <a href=<%=repository['html_url']%>><%=repository['html_url']%></a>- <%=repository['description']%></li>
		<% end %>
	<% end %>
</ul>

