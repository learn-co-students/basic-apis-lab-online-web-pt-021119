<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<div>
  <% if @results%>
    <ul>
      <% @results.each do |r| %>
        <li><%= r["name"] %></li>
        <li><%= link_to r["html_url"], r["html_url"] %></li>
        <li><%= r["description"] %></li>
      <% end %>
    </ul>
  <% end %>
</div>
